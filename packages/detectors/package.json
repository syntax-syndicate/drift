{
  "name": "driftdetect-detectors",
  "version": "0.8.2",
  "description": "Pattern detectors for Drift - 150+ detectors across 15 categories",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/dadbodgeoff/drift"
  },
  "keywords": [
    "architecture",
    "drift",
    "patterns",
    "detectors",
    "linting"
  ],
  "engines": {
    "node": ">=18 <25"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "driftdetect-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.18",
    "fast-check": "^4.5.3",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}

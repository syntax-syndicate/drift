{
  "name": "driftdetect-dashboard",
  "version": "0.8.2",
  "description": "Local web dashboard for Drift architectural drift detection",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/dadbodgeoff/drift"
  },
  "keywords": [
    "drift",
    "dashboard",
    "architecture",
    "patterns",
    "visualization",
    "web-ui"
  ],
  "engines": {
    "node": ">=18 <25"
  },
  "type": "module",
  "main": "./dist/server/index.js",
  "types": "./dist/server/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:server && pnpm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "clean": "rm -rf dist",
    "dev": "pnpm run build:server && concurrently -n server,client -c blue,green \"pnpm run dev:backend\" \"pnpm run dev:client\"",
    "dev:backend": "node --import tsx scripts/dev-server.ts",
    "dev:server": "tsc -p tsconfig.server.json --watch",
    "dev:client": "vite",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.server.json && tsc --noEmit -p tsconfig.client.json"
  },
  "dependencies": {
    "driftdetect-core": "^0.8.2",
    "driftdetect-galaxy": "^0.8.2",
    "express": "^5.2.1",
    "open": "^11.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@react-three/postprocessing": "^3.0.4",
    "@tanstack/react-query": "^5.90.20",
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "@types/prismjs": "^1.26.3",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@types/supertest": "^6.0.3",
    "@types/three": "^0.182.0",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "fast-check": "^4.5.3",
    "postcss": "^8.4.32",
    "prismjs": "^1.29.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "supertest": "^7.2.2",
    "tailwindcss": "^4.1.18",
    "three": "^0.182.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "vitest": "^1.0.0",
    "zustand": "^5.0.10"
  },
  "peerDependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  }
}

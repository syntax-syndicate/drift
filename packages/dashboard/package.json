{
  "name": "driftdetect-dashboard",
  "version": "0.4.2",
  "description": "Local web dashboard for Drift architectural drift detection",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dadbodgeoff/drift"
  },
  "keywords": [
    "drift",
    "dashboard",
    "architecture",
    "patterns",
    "visualization",
    "web-ui"
  ],
  "type": "module",
  "main": "./dist/server/index.js",
  "types": "./dist/server/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:server && pnpm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "clean": "rm -rf dist",
    "dev": "pnpm run build:server && concurrently -n server,client -c blue,green \"pnpm run dev:backend\" \"pnpm run dev:client\"",
    "dev:backend": "node --import tsx scripts/dev-server.ts",
    "dev:server": "tsc -p tsconfig.server.json --watch",
    "dev:client": "vite",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.server.json && tsc --noEmit -p tsconfig.client.json"
  },
  "dependencies": {
    "driftdetect-core": "workspace:*",
    "driftdetect-galaxy": "workspace:*",
    "express": "^4.18.2",
    "open": "^10.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@react-three/drei": "^9.92.0",
    "@react-three/fiber": "^8.15.12",
    "@react-three/postprocessing": "^2.15.11",
    "@tanstack/react-query": "^5.17.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/prismjs": "^1.26.3",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/supertest": "^6.0.3",
    "@types/three": "^0.160.0",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "fast-check": "^3.15.0",
    "postcss": "^8.4.32",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "supertest": "^7.2.2",
    "tailwindcss": "^3.4.0",
    "three": "^0.160.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.10",
    "vitest": "^1.0.0",
    "zustand": "^4.4.7"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}

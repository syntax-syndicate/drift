{
  "name": "driftdetect-mcp",
  "version": "0.9.25",
  "description": "MCP server that gives AI agents (Claude, Cursor, Copilot) deep understanding of your codebase patterns, conventions, and architecture. Query patterns, security boundaries, call graphs in real-time.",
  "license": "Apache-2.0",
  "author": "Geoffrey Fernald",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dadbodgeoff/drift.git"
  },
  "homepage": "https://github.com/dadbodgeoff/drift#readme",
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "ai-agent",
    "claude",
    "claude-desktop",
    "cursor",
    "copilot",
    "anthropic",
    "codebase-context",
    "pattern-detection",
    "code-analysis",
    "static-analysis",
    "call-graph",
    "security-analysis",
    "typescript",
    "python",
    "csharp",
    "java",
    "php"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "driftdetect-mcp": "dist/bin/server.js",
    "drift-mcp": "dist/bin/server.js",
    "drift-mcp-http": "dist/bin/http-server.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "start": "node dist/bin/server.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "driftdetect-core": "workspace:*",
    "driftdetect-detectors": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}

{
  "name": "driftdetect-mcp",
  "version": "0.4.2",
  "description": "MCP (Model Context Protocol) server for Drift - enables AI agents to query codebase patterns",
  "license": "MIT",
  "author": "Geoffrey Fernald",
  "repository": {
    "type": "git",
    "url": "https://github.com/dadbodgeoff/drift"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "drift",
    "patterns",
    "code-quality"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "drift-mcp": "./dist/bin/server.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "start": "node dist/bin/server.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "driftdetect-core": "workspace:*",
    "driftdetect-detectors": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}

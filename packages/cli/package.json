{
  "name": "driftdetect",
  "version": "0.4.2",
  "description": "AI-augmented architectural drift detection - learn and enforce codebase patterns",
  "license": "MIT",
  "author": "Geoffrey Fernald",
  "repository": {
    "type": "git",
    "url": "https://github.com/dadbodgeoff/drift"
  },
  "homepage": "https://github.com/dadbodgeoff/drift#readme",
  "keywords": [
    "architecture",
    "drift",
    "patterns",
    "linting",
    "ai",
    "code-quality",
    "cli",
    "static-analysis"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "drift": "./dist/bin/drift.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "driftdetect-core": "workspace:*",
    "driftdetect-detectors": "workspace:*",
    "driftdetect-dashboard": "workspace:*",
    "@inquirer/prompts": "^7.0.0",
    "chalk": "^5.3.0",
    "cli-progress": "^3.12.0",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "fast-check": "^3.15.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
